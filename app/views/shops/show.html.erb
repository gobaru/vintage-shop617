<main class="main">
  <div class="inner">
    <div class="shop__wrapper">
      <p class="shop__hedding">
        <%= @shop.shop_name%>
      </p>
      <%= link_to "by #{@shop.user.nickname}★", root_path, class: :shop__user %>
      <%if user_signed_in? && current_user.id == @shop.user.id %>
        <div class="shop__manage">
          <%= link_to "編集する", root_path, class: :shop__btn %>
          <%= link_to "削除する", root_path, class: :shop__btn %>
        </div>
      <% end %>
      <div class="shop__image">
        <%= image_tag @shop.image %>
      </div>
      <div class="shop__body">
        <div class="shop__detail">
          <p class="detail__title">ブランド</p>
          <p class="detail__message">
            <%= @shop.bland %>
          </p>
        </div>
        <div class="shop__detail">
          <p class="detail__title">ショップの詳細</p>
          <p class="detail__message">
            <%= @shop.shop_detail %>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>